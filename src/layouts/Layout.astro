---
import Keyboards from '../components/keyboards.astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Keyboards />
    <slot />

    <link
      rel="stylesheet"
      href="https://www.gstatic.com/dialogflow-console/fast/df-messenger/prod/v1/themes/df-messenger-default.css"
    />
    <script
      src="https://www.gstatic.com/dialogflow-console/fast/df-messenger/prod/v1/df-messenger.js"
    ></script>
    <df-messenger
      project-id="cardiocare-ia"
      agent-id="a4387b71-5a7d-415f-b5fb-8c1a11bd0e70"
      language-code="es"
      max-query-length="-1"
    >
      <df-messenger-chat-bubble
        chat-title="Asistente Virtual"
        chat-icon="/bot-dialog.png"
        bot-actor-image="/bot-dialog.png"
      >
      </df-messenger-chat-bubble>
    </df-messenger>
    <style>
      df-messenger {
        z-index: 999;
        position: fixed;
        --df-messenger-font-color: #000;
        --df-messenger-font-family: Google Sans;
        --df-messenger-chat-background: #f3f6fc;
        --df-messenger-message-user-background: #28a7dc;
        --df-messenger-message-bot-background: #fff;
        bottom: 16px;
        right: 16px;
      }
    </style>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    padding: 0;
    box-sizing: border-box;
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
      'Open Sans', 'Helvetica Neue', sans-serif;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    --background-color: rgb(255, 255, 255);
    --background-color-light: #28a7dc; /* Color de fondo para modo claro */
    --background-color-dark: #191a1b;
  }
  body.dark {
    --background-color: #333333;
    color: #fff;
  }

  html {
    background-color: #ffffff;
    transition: background-color 0.8s ease;
  }
  html.dark {
    background-color: #333333;
  }
  .dark .nav-links a {
    color: #fff;
  }
</style>
