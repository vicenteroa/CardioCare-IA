---
import { Image } from 'astro:assets'
import logo from '../../public/logo.png'
import 'bootstrap/dist/css/bootstrap.css'
import ThemeIcon from './ThemeIcon.astro'
const { texto1, texto2, texto3, texto4, link1, link2, link3, link4 } = Astro.props
---

<header class="header">
  <div class="header_pag">
    <a href="/">
      <Image src={logo} alt="Logo" class="logo" />
    </a>
    <p class="nom_pag">CARDIOCARE</p>
    <nav class="navegador">
      <a href={link1}>{texto1}</a>
      <a href={link2}>{texto2}</a>
      <a href={link3}>{texto3}</a>
      <a href={link4}>{texto4}</a>
      <ThemeIcon />
    </nav>
  </div>
</header>
<style>
  .header {
    margin-bottom: 10vh; /* Ajustamos el margen inferior del encabezado */
  }

  .header_pag {
    background-color: var(--background-color-light);
    transition: background-color 0.8s ease;
  }

  :global(.dark) .header_pag {
    background-color: var(--background-color-dark);
    transition: background-color 0.8s ease;
  }

  .header_pag {
    width: 100%;
    height: 10vh;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    position: fixed;
    top: 0;
    z-index: 1000;
  }

  .navegador {
    margin-left: auto;
  }

  .navegador a {
    color: white;
    text-decoration: none;
    padding: 15px;
    margin-right: 20px;
    border: 2px solid transparent;
    border-radius: 5px;
    transition: border-color 0.3s;
  }

  .navegador a:hover {
    border-color: white; /* Cambia el color del borde a blanco en el hover */
  }

  .nom_pag {
    color: white;
    font-size: 20px;
    position: relative;
    left: 10px;
    top: 10px;
    font-weight: bold;
  }

  .logo {
    width: 6vh;
    height: 7vh;
  }
</style>
